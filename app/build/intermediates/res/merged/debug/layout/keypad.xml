<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/border" >
    <TableRow
        >
        <Button
            android:id="@+id/keypad_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#9c6"
            android:background="@drawable/num_button"
            android:text="1" />
        <Button
            android:id="@+id/keypad_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#9c6"
            android:layout_marginLeft="5dp"
            android:background="@drawable/num_button"
            android:text="2" />
        <Button
            android:id="@+id/keypad_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#9c6"
            android:layout_marginLeft="5dp"
            android:background="@drawable/num_button"
            android:text="3" />
    </TableRow>
    <TableRow
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/keypad_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#9c6"
            android:background="@drawable/num_button"
            android:text="4" />
        <Button
            android:id="@+id/keypad_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#9c6"
            android:layout_marginLeft="5dp"
            android:background="@drawable/num_button"
            android:text="5" />
        <Button
            android:id="@+id/keypad_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#9c6"
            android:layout_marginLeft="5dp"
            android:background="@drawable/num_button"
            android:text="6" />
    </TableRow>
    <TableRow
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/keypad_7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#9c6"
            android:background="@drawable/num_button"
            android:text="7" />
        <Button
            android:id="@+id/keypad_8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#9c6"
            android:layout_marginLeft="5dp"
            android:background="@drawable/num_button"
            android:text="8" />
        <Button
            android:id="@+id/keypad_9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#9c6"
            android:layout_marginLeft="5dp"
            android:background="@drawable/num_button"
            android:text="9" />
    </TableRow>
</TableLayout>